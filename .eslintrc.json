{
  "extends": [
    "standard",
    "standard-jsx",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "react-hooks"
  ],
  "globals": {
    "fetch": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "allowImportExportEverywhere": true
  },
  "env": {
    "jest": true
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "prettier/prettier": [
      "error",
      {
        "arrowParens": "always",
        "printWidth": 120,
        "singleQuote": true,
        "trailingComma": "es5"
      }
    ],
    "react-hooks/rules-of-hooks": "error"
  }
}